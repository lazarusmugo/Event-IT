<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llBottomBar"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_1"
            android:orientation="horizontal"
            android:paddingTop="@dimen/value_3"
            android:paddingBottom="@dimen/value_3">

            <LinearLayout
                android:id="@+id/llHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivBottomHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_home" />

                <TextView
                    android:id="@+id/tvBottomHome"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_1.5"
                    android:text="Home" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/llCart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/addEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_add_event" />



                <TextView
                    android:id="@+id/tvBottomCart"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_1.5"
                    android:text="Add Event" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/Login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/loginAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_login" />

                <TextView
                    android:id="@+id/Login2"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_1.5"
                    android:text="account" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/RegPage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivBottomWishList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_new_account" />

                <TextView
                    android:id="@+id/tvBottomWishList"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_1.5"
                    android:text="Register" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvBottomCartCount"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:gravity="end|top"
            android:background="@drawable/ic_settings"
            android:maxLines="1"
            android:paddingStart="@dimen/value_3"
            android:paddingLeft="@dimen/value_3"
            android:paddingTop="@dimen/value_1.5"
            android:paddingEnd="@dimen/value_3"
            android:paddingRight="@dimen/value_3"
            android:paddingBottom="@dimen/value_1.5"
            android:layout_marginStart="@dimen/value_5"
            android:visibility="gone"
            android:text="1" />

    </FrameLayout>


</LinearLayout>